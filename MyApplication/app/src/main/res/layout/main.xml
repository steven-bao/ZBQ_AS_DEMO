<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a">

    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_tag_normal"
        android:text="ListView嵌套Demo"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tag_normal"
        android:text="RecycleViewActivityDemo"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="69dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tag_normal"
        android:text="仿QQ侧滑删除"
        android:layout_below="@+id/btn_2"
        android:layout_alignStart="@+id/btn_4"
        android:layout_marginTop="49dp" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tag_normal"
        android:text="PullRefreshExpandActivityDemo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tag_normal"
        android:text="仿微信语音"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/btn_1"
        android:layout_alignParentStart="true" />

</RelativeLayout>